<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="5" android:textColor="#ddffb6" android:textSize="18sp" android:textStyle="normal"/>

    <TextView android:id="@+id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="5" android:textColor="#ddffb6" android:textSize="18sp" android:textStyle="normal"/>
    <TextView android:id="@+id/desc" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="5" android:textColor="#ddffb6" android:textSize="18sp" android:textStyle="normal"/>

</LinearLayout>